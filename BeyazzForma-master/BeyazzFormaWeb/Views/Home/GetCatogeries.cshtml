@model IEnumerable<BeyazzFormaWeb.Entity.Category>
@{
	var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}
<div class="list-group">
    <a href="/Home/List" class="list-group-item list-group-item-action bgdark textwhite">TÜM KATEGORİLER</a>
    @foreach (var list in Model)
    {
        if (selectedCategory != null)
        {
            if (list.Id == int.Parse(selectedCategory.ToString()))
            {
                //seçilen kategori ile url id birbirine eşit
                <a href="/Home/List/@list.Id" class="list-group-item list-group-item-action bgdark textwhite active">@list.Name</a>
            }
            else
            {
				<a href="/Home/List/@list.Id" class="list-group-item list-group-item-action bgdark textwhite">@list.Name</a>
            }
        }
        else
        {
			<a href="/Home/List/@list.Id" class="list-group-item list-group-item-action bgdark textwhite">@list.Name</a>
        }
    }
</div>